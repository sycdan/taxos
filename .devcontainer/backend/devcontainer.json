{
  "name": "Taxos Backend Development Environment",
  "dockerComposeFile": [
    "../../dev/docker-compose.yml",
    "docker-compose.override.yml"
  ],
  "features": {
    "ghcr.io/devcontainers/features/python:1": {
      "version": "3.12"
    },
    "ghcr.io/devcontainers/features/docker-outside-of-docker:1": {}
  },
  "containerEnv": {
    "PYTHONPATH": "/workspaces/taxos/backend"
  },
  "service": "backend",
  "shutdownAction": "none",
  "workspaceFolder": "/workspaces/taxos",
  "mounts": [
    "source=${localEnv:USERPROFILE}/.config/git,target=/home/vscode/.config/git,type=bind,consistency=cached",
    "source=${localEnv:USERPROFILE}/.ssh,target=/home/vscode/.ssh,type=bind,consistency=cached"
  ],
  "customizations": {
    "vscode": {
      "extensions": [
        "GitHub.copilot",
        "GitHub.copilot-chat",
        "ms-python.python",
        "charliermarsh.ruff"
      ]
    }
  },
  "postCreateCommand": "bash .devcontainer/backend/on_create.sh",
  "postStartCommand": "bash .devcontainer/backend/on_start.sh",
  "postAttachCommand": "bash .devcontainer/backend/on_attach.sh"
}